<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/imageButton_arrowDown"
        android:layout_margin="12dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:background="@color/colorPrimary"
        android:visibility="gone" />

    <TextView
        android:id="@+id/TextView_savedDestination"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|start"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:gravity="center_vertical|start"
        android:text="TextView"
        android:textColor="@color/colorTextDisabled"
        android:textSize="24sp"
        tools:text="@string/test_destination" />

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/switch_destination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/TextView_savedDestination"
        android:layout_gravity="center_vertical|end"
        android:layout_toEndOf="@+id/TextView_savedDestination"
        android:layout_toRightOf="@+id/TextView_savedDestination"
        android:checked="false"
        android:gravity="center|end"
        android:visibility="visible"
        tools:checked="false" />

    <ImageButton
        android:id="@+id/imageButton_arrowDown"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/switch_destination"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="11dp"
        android:background="@android:color/transparent"
        android:contentDescription="Arrow Down Button"
        android:tint="@color/colorTextNormal"
        app:srcCompat="@android:drawable/arrow_down_float" />

</RelativeLayout>